<div class="comments">
    <h3 class="title-comments">Комментарии ({{ commentItems|length }})</h3>
    <ul class="media-list">
        {% for commentItem in commentItems %}
        <li class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object img-rounded" src="avatar1.jpg" alt="...">
                </a>
            </div>
            <div class="media-body">
                <div class="media-heading">
                    <div class="author">{{ commentItem.author }}</div>
                    <div class="metadata">
                        <span class="date"></span>
                    </div>
                </div>
                <div class="media-text text-justify">{{ commentItem.massage }}</div>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% if app.user %}
    {{ form_start(form) }}
    <div class="form_row">
        {{ form_label(form.massage) }}
        {{ form_errors(form.massage) }}
        {{ form_widget(form.massage, { 'attr': {'class': 'form-control', 'rows': '5', 'id': 'comment'} }) }}
        {{ form_widget(form.save, { 'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_end(form) }}
{% else %}
    <p>Please <a href="{{ path('fos_user_security_login') }}">login</a>  and leaf comment</p>
{% endif %}